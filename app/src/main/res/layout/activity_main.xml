<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg"
        android:gravity="center">

        <!-- App Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xl"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg"
                android:gravity="center">

                <!-- App Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card Widget"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:fontFamily="sans-serif-medium" />

                <!-- App Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track your credit card due dates right from your home screen. Never miss a payment again!"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/on_surface_variant"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_lg" />

                <!-- Feature List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Multiple credit cards"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/success"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Color-coded due date alerts"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/success"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Clean, modern design"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/success" />

                </LinearLayout>

                <!-- Add Widget Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_widget_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="Add Widget to Home Screen"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    app:icon="@drawable/ic_add_24"
                    app:iconGravity="start"
                    app:cornerRadius="@dimen/corner_radius_md"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Long press on your home screen, select 'Widgets', and add the Credit Card Widget"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/on_surface_variant"
            android:gravity="center"
            android:alpha="0.8" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>