<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_entry_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Card Name:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/remove_card_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/remove_button_background"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Remove Card"
            android:scaleType="fitCenter"
            android:padding="4dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/card_name_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="e.g., Visa, MasterCard, AMEX"
        android:background="@drawable/edit_text_background"
        android:padding="8dp"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/due_date_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Due: Select Date"
        android:background="@drawable/date_button_background"
        android:textColor="#333333"
        android:textSize="14sp" />

</LinearLayout>