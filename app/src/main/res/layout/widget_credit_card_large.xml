<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Card Name - Top Left -->
    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Card"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- Due Date - Below Card Name -->
    <TextView
        android:id="@+id/due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December 15, 2024"
        android:textSize="14sp"
        android:textColor="#E0E0E0"
        android:layout_below="@id/card_name"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp" />

    <!-- Days Remaining - Top Right -->
    <TextView
        android:id="@+id/days_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center" />

    <!-- Days Label - Below Days Remaining -->
    <TextView
        android:id="@+id/days_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="days remaining"
        android:textSize="12sp"
        android:textColor="#B0B0B0"
        android:layout_below="@id/days_remaining"
        android:layout_alignParentRight="true"
        android:gravity="center" />

    <!-- Progress Bar (Optional) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:progress="50"
        android:max="100"
        android:progressTint="#4CAF50" />

</RelativeLayout>